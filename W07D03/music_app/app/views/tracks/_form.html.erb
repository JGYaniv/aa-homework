<% action = (!track.id ? tracks_url : track_url(track)) %>

<form action="<%= action %>" method="post" name="track_form">
    <% if track.id %>
        <input type="hidden" name="_method" value="patch">
    <% end %>
    <%= auth_token %>
    <input type="hidden" name="track[album_id]" value="<%= album_id %>">

    <label for="track_form" name="track_title">Title: </label>
    <input type="text" name="track[title]" value="<%= track.title if track %>">

    <label for="track_form" name="track_ord">Ord: </label>
    <input type="text" name="track[ord]" value="<%= track.ord if track %>">

    <label for="track_form" name="track_bonus">Bonus: </label>
    <input type="radio" name="track[bonus]" value="true" <%= "checked" if track.bonus %>>Y
    <input type="radio" name="track[bonus]" value="false" <%= "checked" if !track.bonus %>>N

    <label for="track_form" name="track_lyrics">Lyrics: 
    <textarea name="track[lyrics]" id="" cols="15" rows="5"><%= track.lyrics if track.lyrics %></textarea>
    </label>

    <input type="submit" value="submit">
</form>