<h2 id="page-title"><%= @band.name %></h2>
<ul id="album-list">
<p>Albums: </p>
<% @band.albums.each do |album| %>
    <li class="album-list-item">
        <a href="<%= album_url(album) %>"><%= album.title %></a>
    </li>
<% end %>
</ul>
<form action="<%= new_band_album_url(@band) %>" method="get">
    <%= auth_token %>
    <input type="submit" value="new album">
</form>
<form action="<%= band_url(@band) %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
</form>
<form action="<%= edit_band_url(@band) %>" method="get">
    <%= auth_token %>
    <input type="submit" value="edit">
</form>