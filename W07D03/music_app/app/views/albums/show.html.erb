<h2 id="page-title"><%= @album.title %></h2>
<ul id="album-details">
    <% band = @album.band %>
    <li>Band: <a href="<%= band_url(band) %>" class="band-link"><%= band.name %></a></li>
    <li>Year: <%= @album.year %></li>
    <li>Live: <%= @album.live %></li>
</ul>
<p>Tracks: </p>
<ul id="track-list">
<% @album.tracks.each do |track| %>
    <li class="track-list-item">
        <a href="<%= track_url(track) %>"><%= track.title %></a>
    </li>
<% end %>
</ul>
<form action="<%= new_album_track_url(@album) %>" method="get">
    <%= auth_token %>
    <input type="submit" value="new track">
</form>
<form action="<%= album_url(@album) %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
</form>
<form action="<%= edit_album_url(@album) %>" method="get">
    <%= auth_token %>
    <input type="submit" value="edit">
</form>